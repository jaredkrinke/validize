  "license": "MIT",
  "files": [
    "validize.js",
    "validize.d.ts"
  ],
  "devDependencies": {
    "@types/assert": "^1.4.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.4",
    "assert": "^2.0.0",
    "mocha": "6.2.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/koa": "^2.11.0"
  }
}
