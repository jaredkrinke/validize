{
  "name": "validize",
  "version": "1.0.0",
  "description": "Tiny TypeScript middleware for validating JSON in Koa",
  "main": "validize.js",
  "scripts": {
    "build": "copy /y package.json dist && tsc -p .",
    "watch": "tsc -w -p .",
    "test": "mocha --require ts-node/register test/*.test.ts",
    "watch:test": "mocha --watch --require ts-node/register test/*.test.ts --watch --watch-extensions ts"
  },
